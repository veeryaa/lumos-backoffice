<%- include ('../templates/header.ejs') %> <%- include ('../templates/navbar.ejs') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">Lumos Coffee Backoffice - Membership</div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <a href="/membership/insert" style="width: 100%" class="btn btn-primary">Tambah Data Membership</a>
            </div>
          </div>
          <table class="table table-responsive-md mt-3">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Membership ID</th>
                <th scope="col">Deskripsi</th>
                <th scope="col">Minimum Poin</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach((element, i) => { %>
              <tr> 
                <td><%= i + 1 %></td>
                <td><a href="/membership/edit/<%= element.membership_id %> "><%= element.membership_id %></a></td>
                <td><%= element.deskripsi %></td>
                <td><%= element.minimum_poin %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('../templates/footer.ejs') %>
