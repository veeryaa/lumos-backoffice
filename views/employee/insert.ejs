<%- include ('../templates/header.ejs') %> <%- include ('../templates/navbar.ejs') %>

<div id="successModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="card">
        <div class="card-header">
          <h3>Notifikasi</h3>
        </div>
        <div class="card-body">
          <div class="alert alert-success" role="alert">
            Data berhasil diupdate.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="failModal" class="modal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="card">
        <div class="card-header">
          <h3>Notifikasi</h3>
        </div>
        <div class="card-body">
          <div class="alert alert-danger" role="alert">
            Data gagal diupdate.
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <% if (messages.msg) { %>
    <div class="alert alert-success" role="alert">
      <%= messages.msg %> 
    </div>
  <% } %> 
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">Lumos Coffee Backoffice - Pegawai</div>
        <div class="card-body">
          <h3>Insert Data</h3>
          <form action="/employee/insert" method="POST">
            <div class="row">
              <div class="col-md-6">
                <label for="id">Employee ID: </label
                ><input
                  type="text"
                  name="employee_id"
                  id="id"
                  class="form-control"
                  placeholder="Employee ID"
                />
              </div>
              <div class="col-md-6">
                <label for="nama">Nama Lengkap: </label
                ><input
                  type="text"
                  name="nama"
                  id="nama"
                  class="form-control"
                  placeholder="Nama"
                />
              </div>
            </div>
            <div class="row mt-1">
              <div class="col-md-6">
                <label for="tanggal_lahir">Tanggal Lahir: </label
                ><input type="date" class="form-control" name="tanggal_lahir" id="tanggal_lahir" />
              </div>
              <div class="col-md-6">
                <label for="email">Email: </label
                ><input
                  type="email"
                  name="email"
                  id="email"
                  class="form-control"
                  placeholder="Email"
                />
              </div>
            </div>
            <div class="row mt-1">
              <div class="col-md-6">
                <label for="role">Role: </label
                ><select name="role" class="form-control">
                  <option value="Owner">Owner</option>
                  <option value="Staff">Staff</option>
                </select>
              </div>
              <div class="col-md-6">
                <label for="password">Password: </label
                  >
                <input
                type="text"
                name="password"
                id="password"
                class="form-control"
                placeholder="Password"
              />
              </div>
            </div>
            <div class="row mt-1">
              <div class="col-md-6">
                <label for="">Aksi: </label>
                <button class="btn btn-primary" style="width: 100%">Insert</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
</script>

